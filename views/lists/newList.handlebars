<h2>Create a New To-Do List</h2>
<form id="listForm" action="/lists" method="POST">
	<div id="tasksContainer">
		<div>
			<label for="description">Task:</label>
			<input type="text" id="description" name="listItems[0][description]">

			<label for="value">Points:</label>
			<input type="number" id="value" name="listItems[0][value]">
		</div>
	</div>

	<button id="addItem">Add Task</button>
	<button>Create List</button>
</form>

<script src="./../scripts/create-todo.js"></script>